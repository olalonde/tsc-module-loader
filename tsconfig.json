{
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build"
  }
}
